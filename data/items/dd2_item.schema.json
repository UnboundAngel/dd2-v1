{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "DD2 Item",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "hero": {
      "description": "Hero(s) this applies to; 'All' or specific names.",
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      ]
    },
    "drop": {
      "type": "string"
    },
    "type": {
      "type": "string"
    },
    "category": {
      "type": "string"
    },
    "slotType": {
      "type": "string"
    },
    "image": {
      "type": "string",
      "format": "uri"
    }
  },
  "required": [
    "name",
    "description",
    "type"
  ],
  "additionalProperties": true
}